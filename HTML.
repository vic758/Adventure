<script>
function subscribe(){
  const email=document.getElementById("email").value;
  alert(email ? `Thanks for subscribing, ${email}!` : "Please enter an email.");
}

const canvas=document.getElementById("gameCanvas");
const ctx=canvas.getContext("2d");

let player={x:180,y:520,size:40,speed:6};
let enemies=[];
let score=0;
let gameOver=false;

document.addEventListener("keydown",e=>{
  if(e.key==="ArrowLeft"||e.key==="a") player.x-=player.speed;
  if(e.key==="ArrowRight"||e.key==="d") player.x+=player.speed;
});

function spawnEnemy(){
  enemies.push({
    x:Math.random()*(canvas.width-40),
    y:-40,size:40,speed:3+score*0.02
  });
}

function loop(){
  if(gameOver){
    ctx.fillStyle="white";
    ctx.font="30px Arial";
    ctx.fillText("GAME OVER",110,300);
    return;
  }

  ctx.clearRect(0,0,canvas.width,canvas.height);
  ctx.fillStyle="#4CAF50";
  ctx.fillRect(player.x,player.y,player.size,player.size);

  ctx.fillStyle="red";
  enemies.forEach(e=>{
    e.y+=e.speed;
    ctx.fillRect(e.x,e.y,e.size,e.size);
    if(e.x<player.x+40&&e.x+40>player.x&&e.y<player.y+40&&e.y+40>player.y)
      gameOver=true;
  });

  enemies=enemies.filter(e=>e.y<canvas.height);
  score++;
  ctx.fillStyle="white";
  ctx.fillText("Score: "+score,10,20);

  if(Math.random()<0.03) spawnEnemy();
  requestAnimationFrame(loop);
}
loop();
</script>

